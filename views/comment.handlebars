<div class="container col-md-11 mt-2 mx-auto">
    <div class="row">
        {{> articles/single article=body}}
    </div>
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div>
                <label for="comment-author">Your Name</label>
                <input type="text" id="comment-author" placeholder="Your Name">
            </div>
            <div>
                <label for="comment-body">Your Thoughts</label>
                <textarea class="form-control" id="comment-body" rows="4"></textarea>
            </div>
            <button type="button" class="btn btn-primary" id="clicker">Submit</button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 mx-auto">
            {{> comments/singleComment comments=body.data.comments}}
        </div>
    </div>
</div>